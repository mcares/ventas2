<h1>Empresas Registradas</h1>
<br></br>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Rut</th>
      <th>Nombre</th>
      <th>Rubro</th>
      <th>Direccion</th>

      <th  colspan="3" >Editar</th>

    </tr>
  </thead>

  <tbody>
    <% @empresas.each do |empresa| %>
      <tr>
        <td><%= empresa.rut %></td>
        <td><%= empresa.nombre %></td>
        <td><%= empresa.rubro %></td>
        <td><%= empresa.direccion %></td>
        <td><%= link_to 'Ver', empresa %></td>
        <td><%= link_to 'Editar', edit_empresa_path(empresa) %></td>
        <td><%= link_to 'Eliminar', empresa, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<a class="btn btn-default btn-lg active" href="<%=new_empresa_path %>" role="button">Nueva Empresa</a>
